/public/js/
│
├── core/
│   ├── init.js                # entry point (DOMContentLoaded)
│   ├── auth.js                # token, requireAuth
│   ├── state.js               # sessionStorage keys, runtime state
│   ├── helpers.js             # formatMoney, escapeHtml, toast
│   ├── api.js                 # axios wrappers (ALL API calls)
│   └── socket.js              # socket.io real-time events
│
├── layout/
│   ├── navigation.js          # sidebar + mobile navigation
│   ├── breadcrumb.js          # breadcrumb logic
│   ├── profile.js             # header profile dropdown
│   └── tabs.js                # tab switching (overview tabs)
│
├── dashboard/
│   ├── dashboard.js           # metrics + holdings table
│   ├── charts.js              # portfolio history + allocation
│
├── portfolio/
│   ├── portfolios.js          # list/create/delete portfolio
│   ├── holdings.js            # holdings CRUD
│   └── transactions.js        # transactions CRUD
│
├── market/
│   ├── market.js              # search + panel open/close
│   ├── heatmap.js             # market heatmap
│   ├── watchlist.js           # watchlist logic
│   └── trending.js            # trending stocks
│
├── fraud/
│   ├── fraud-kpi.js           # KPIs
│   ├── fraud-history.js       # ML fraud history
│   ├── fraud-cases.js         # MySQL fraud cases
│   ├── fraud-map.js           # geo heatmap (Leaflet)
│   └── fraud-modal.js         # modals (detail + test)
│
├── alerts/
│   └── alerts.js              # risk alerts
│
├── premium/
│   ├── premium.js             # premium check + UI toggle
│   └── gold.js                # gold prices + chart
│
└── user.js                    # ONLY imports + init
